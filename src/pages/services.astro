---
import MainLayout from "../layouts/main-layout.astro";
import One from "../icons/one.tsx";
import Two from "../icons/two.tsx";
import Three from "../icons/three.tsx";
import Four from "../icons/four.tsx";
import ServiceIconOne from "../icons/service1-icon.tsx";
import ServiceIconTwo from "../icons/service2-icon.tsx";
import ServiceIconThree from "../icons/service3-icon.tsx";
import ServiceIconFour from "../icons/service4-icon.tsx";

const services = [
  {
    title: "Plan de Proyecto",
    text: "Creamos planes detallados, adaptando cada diseño a tus necesidades y gustos, asegurando funcionalidad y estilo.",
  },
  {
    title: "Trabajo de Interiores",
    text: "Diseñamos interiores únicos, fusionando tendencias actuales con toques personales para espacios vivos.",
  },
  {
    title: "Realización",
    text: "Convertimos conceptos en realidad, con un enfoque práctico y estético para lograr espacios armoniosos.",
  },
  {
    title: "Trabajo Artístico en 2D/3D",
    text: "Creaciones en 2D y 3D que capturan tu visión, aportando profundidad y perspectiva a cada diseño.",
  },
  {
    title: "Diseño Comercial",
    text: "Desarrollamos diseños comerciales atractivos, combinando funcionalidad con una estética cautivadora.",
  },
  {
    title: "Trabajo de Decoración",
    text: "Personalizamos la decoración, enfocándonos en detalles que realzan y dan vida a cada espacio interior.",
  },
];

const howWeWorkDetails = [
  {
    imgIcon: ServiceIconOne,
    numIcon: One,
    img: "/service1.png",
    title: "Concepto y Detalles",
    info: "Desarrollamos conceptos detallados, centrando cada diseño en la funcionalidad y estética para espacios únicos.",
  },
  {
    imgIcon: ServiceIconTwo,
    numIcon: Two,
    img: "/service2.png",
    title: "Idea para el Trabajo",
    info: "Cada idea se convierte en un plan de trabajo concreto, buscando siempre la innovación y la originalidad en cada proyecto.",
  },
  {
    imgIcon: ServiceIconThree,
    numIcon: Three,
    img: "/service3.png",
    title: "Diseño",
    info: "El diseño es el corazón de nuestro trabajo, combinando creatividad y practicidad para lograr resultados sorprendentes.",
  },
  {
    imgIcon: ServiceIconFour,
    numIcon: Four,
    img: "/service4.png",
    title: "Perfección",
    info: "Nos enfocamos en la perfección de cada detalle, asegurando que el resultado final supere todas las expectativas.",
  },
];
---

<MainLayout title="Interior Design Services">
  <!-- Banner Section -->

  <section class="w-full bg-services h-[50vh] flex justify-center items-end">
    <div
      class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5"
    >
      <h1
        class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200"
      >
        Servicios
      </h1>
      <p
        class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"
      >
        <a href="/">Inicio</a> / Servicios
      </p>
    </div>
  </section>

  <!-- Services Section -->

  <section
    class="lg:max-w-[1200px] grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 lg:gap-y-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between"
  >
    {
      services.map((service) => {
        return (
          <div
            class="w-full col-span-1 max-w-[358px] mx-auto flex rounded-[30px] hover:bg-primary-300 transition 
          duration-300 ease-in-out
          px-5 py-[83px] flex-col justify-center items-center gap-3 md:gap-5"
          >
            <h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">
              {service.title}
            </h3>
            <p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center">
              {" "}
              {service.text}
            </p>
          </div>
        );
      })
    }
  </section>

  <!-- How We Work Section -->
  <section class="px-12 xl:px-0 w-full mt-[100px] lg:mt-[200px] min-h-screen">
    <div
      class="w-full lg:max-w-[1200px] p-12 mx-auto lg:px-[116px] lg:py-[160px] bg-primary-300 rounded-[70px]"
    >
      <h2
        class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full capitalize lg:max-w-[50%] pb-2 mx-auto"
      >
        Cómo Trabajo
      </h2>
      <p
        class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[75%] mx-auto"
      >
        Mi enfoque en el diseño de interiores combina creatividad, funcionalidad
        y una cuidadosa planificación. Cada proyecto es una oportunidad para
        crear espacios que reflejen la personalidad y necesidades de nuestros
        clientes, transformando sus ideas en realidades tangibles y
        estéticamente atractivas.
      </p>

      <div class="pt-[70px] lg:pt-[100px] flex flex-col gap-[70px]">
        <!-- Inner Sections -->

        {
          howWeWorkDetails.map((detail, index) => {
            const ImageIcon = detail.imgIcon;
            const NumberIcon = detail.numIcon;
            const className = `flex justify-between flex-col ${
              index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"
            } gap-[50px] items-center max-w-[967px]`;

            return (
              <div class={className}>
                <img src={detail.img} alt="" />
                <div class="flex flex-col gap-12 lg:gap-[58px]">
                  <div class="justify-between hidden lg:flex">
                    <ImageIcon />
                    <NumberIcon />
                  </div>
                  <div class="flex flex-col gap-3">
                    <h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">
                      {detail.title}
                    </h3>
                    <p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px]">
                      {detail.info}
                    </p>
                  </div>
                </div>
              </div>
            );
          })
        }

        <!-- Inner Sections End -->
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
