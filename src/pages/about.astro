---
import MainLayout from "../layouts/main-layout.astro";
import QuoteText from "../components/quote.tsx";
import Facebook from "../icons/facebook.tsx";
import Twitter from "../icons/twitter.tsx";
import LinkedIn from "../icons/linkedin.tsx";
import Instagram from "../icons/instagram.tsx";
import angela1 from "../../public/angela4.jpg";
import angela2 from "../../public/angela2.jpg";
import angela3 from "../../public/angela3.jpg";
import { Image } from "astro:assets";
---

<MainLayout title="Interior Design About Us">
  <!-- Banner Section -->

  <section class="w-full bg-about h-[50vh] flex justify-center items-end">
    <div
      class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5"
    >
      <h1
        class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200"
      >
        Acerca de mí
      </h1>
      <p
        class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"
      >
        <a href="/">Inicio</a> / Acerca de mí
      </p>
    </div>
  </section>

  <!-- Quote Section -->

  <section
    class="w-full px-12 lg:px-0 pt-[100px] lg:pt-[200px] lg:max-w-[1200px] mx-auto flex items-center justify-center"
  >
    <QuoteText
      text="Me gusta un interior que desafía las etiquetas. Realmente no quiero que alguien entre en una habitación y sepa que lo hice yo"
      name="BUNNY WILLIAMS"
    />
  </section>

  <!-- What We Do Section -->

  <section
    class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px]"
  >
    <div
      class="w-full flex flex-col-reverse lg:flex-row justify-between gap-10 items-center"
    >
      <div class="flex flex-col gap-6">
        <h2
          class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
        >
          Hacemos lo que hacemos
        </h2>
        <p
          class="text-base md:text-[22px] lg:max-w-[85%] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]"
        >
          En nuestra firma de diseño de interiores, nos dedicamos a transformar
          espacios en experiencias memorables y personalizadas.
        </p>
      </div>
      <img src="/about1.png" alt="" />
    </div>
  </section>

  <!-- The End Result Section -->

  <section
    class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px]"
  >
    <div
      class="w-full flex flex-col-reverse lg:flex-row-reverse justify-between gap-24 items-center"
    >
      <div class="flex flex-col gap-6">
        <h2
          class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
        >
          El resultado final
        </h2>
        <p
          class="text-base md:text-[22px] lg:max-w-[95%] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]"
        >
          El arte del diseño de interiores se materializa en el resultado final:
          un espacio que cuenta una historia, que respira vida y armonía.
        </p>
      </div>
      <img src="/about2.png" alt="" />
    </div>
  </section>

  <!-- What People Think About Us Section -->

  <section
    class="w-full py-[100px] lg:py-[185px] mt-[173px] px-12 lg:px-0 mx-auto bg-primary-300"
  >
    <div class="w-full flex flex-col gap-10 lg:max-w-[1200px] mx-auto">
      <h2
        class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[100%] pb-9 mx-auto"
      >
        Diseñadora de interiores y luces
      </h2>
      <div class="grid grid-cols-1 gap-4 md:grid md:grid-cols-4 md:gap-4">
        <Image
          src={angela2}
          alt=""
          width={284}
          height={433}
          class="img-about object-cover rounded-[32px]"
        />
        <Image
          src={angela3}
          alt=""
          class="img-about object-cover rounded-[32px]"
          width={284}
          height={433}
        />
        <div
          class="card-about flex flex-col gap-10 w-full justify-between py-[70px] bg-white min-w-[284px] items-center rounded-[32px]"
        >
          <p class="flex flex-col tracking-tight leading-9 text-center">
            <span class="text-primary-200 text-lg lg:text-[32px] font-dm mb-3"
              >Angela Arauco</span
            >
            <span class="text-text-gray-200 text-base lg:text-lg font-jost">
              Lima, Perú</span
            >
          </p>
          <div class="flex gap-6">
            <a href="/">
              <Facebook />
            </a>
            <a href="/">
              <Twitter />
            </a>
            <a href="/">
              <LinkedIn />
            </a>
            <a href="/">
              <Instagram />
            </a>
          </div>
          <p class="flex flex-col tracking-tight leading-9 text-center">
            <span class="text-text-gray-200 text-base lg:text-lg font-jost">
              +51 991 840 081</span
            >
            <span class="text-text-gray-200 text-base lg:text-lg font-jost">
              angelaaraucostudio@email.com</span
            >
          </p>
        </div>
        <Image
          src={angela1}
          alt=""
          class="img-about object-cover rounded-[32px]"
          height={433}
          width={284}
        />
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
